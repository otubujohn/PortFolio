<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Products</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <% products.forEach(function (product){ %>
    <div class="container">
      <div class="imgBx">
        <img src=" <%= product.img_link %> " alt="A product for sale" />
      </div>
      <div class="details">
        <div class="content">
          <h2>
            <%= product.name %> <br />
            <span><%= product.name %></span>
          </h2>
          <p><%= product.details %></p>
          <h3><%= product.price %></h3>
          <form action="/addtocart" method="post">
            <input type="hidden" value="<%= product.name %>" name="name" />
            <input type="hidden" value="<%= product.price %>" name="price" />
            <input
              type="hidden"
              value="<%= product.img_link %>"
              name="img_link"
            />
            <button>Add to cart</button>
          </form>
        </div>
      </div>
    </div>
    <% }); %>
  </body>
  <div class="card">
    <div class="row">
      <div class="col-md-8 cart">
        <div class="title">
          <div class="row">
            <div class="col">
              <h4><b>Shopping Cart</b></h4>
            </div>
            <div class="col align-self-center text-right text-muted">
              <%= carts.length %> Items
            </div>
          </div>
        </div>
        <% if(carts.length < 1){ %>
        <h4><b>No Items in Cart yet</b></h4>
        <% }else{ carts.forEach(cart=>{ %>
        <div class="row border-top border-bottom">
          <div class="row main align-items-center">
            <div class="col-2">
              <img class="img-fluid" src="<%= cart.img_link %>" />
            </div>
            <div class="col">
              <div class="row text-muted"><%= cart.name %></div>
              <div class="row"><%= cart.name %></div>
            </div>
            <div class="col">
              <a href="#">-</a><a href="#" class="border">1</a><a href="#">+</a>
            </div>
            <div class="col">
              &euro;<%= cart.price %> <span class="close">&#10005;</span>
            </div>
          </div>
        </div>
        <% })} %>
        <div class="back-to-shop">
          <a href="#">&leftarrow;</a
          ><span class="text-muted">Back to shop</span>
        </div>
      </div>
      <div class="col-md-4 summary">
        
</html>
